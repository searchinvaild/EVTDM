FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.grout 0
);

regions
(
    boxToCell
    {
        box (0 0 -1) (1 0.5 1);  // 下半部分设置为浆液
        fieldValues
        (
            volScalarFieldValue alpha.grout 1
        );
    }
);

